{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "allowJs": false,
        "checkJs": false,
        "noEmit": false,
        "declaration": true,
        "types": ["@iobroker/types"],
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./build/",
        "target": "es2019",
    },
    "include": ["src/**/*.ts"],
    "exclude": ["src/**/*.test.ts"]
}
